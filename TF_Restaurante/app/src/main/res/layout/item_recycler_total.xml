<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    >


    <ImageView
        android:id="@+id/img_total"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"


        />

    <TextView
        android:id="@+id/cant_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="cantidad"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="@+id/img_total"
        app:layout_constraintStart_toEndOf="@+id/img_total"
        app:layout_constraintTop_toTopOf="@+id/img_total" />

    <TextView
        android:id="@+id/titulo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="titulo"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cant_item"
        app:layout_constraintStart_toEndOf="@+id/cant_item"
        app:layout_constraintTop_toTopOf="@+id/cant_item" />

    <TextView
        android:id="@+id/prec_uni_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/titulo_item"
        app:layout_constraintEnd_toStartOf="@+id/valor_tot_item"
        app:layout_constraintTop_toTopOf="@+id/titulo_item" />

    <TextView
        android:id="@+id/valor_tot_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:gravity="end"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/prec_uni_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/prec_uni_item" />




</androidx.constraintlayout.widget.ConstraintLayout>