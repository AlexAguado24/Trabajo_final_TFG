<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/id_linear_dialogo"
    android:paddingHorizontal="7dp"
    android:background="@color/cardview_dark_background"


    >

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="47dp"
        android:layout_height="40dp"


        android:padding="8dp"
        android:text="Back"
        android:textSize="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/bk_tot1"
        />

    <ImageView
        android:id="@+id/img_dialogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"

        app:layout_constraintBottom_toTopOf="@+id/btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_producto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"


        app:layout_constraintEnd_toEndOf="@+id/text_precio"
        app:layout_constraintStart_toStartOf="@+id/text_precio"
        app:layout_constraintTop_toTopOf="@+id/img_dialogo" />

    <TextView
        android:id="@+id/text_precio"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_dialogo"
        app:layout_constraintEnd_toStartOf="@+id/btn_abajo"
        app:layout_constraintStart_toEndOf="@+id/img_dialogo" />


    <Button
        android:id="@+id/btn_arriba"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/black"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/edit_can_pro"
        app:layout_constraintStart_toStartOf="@+id/edit_can_pro"
        app:layout_constraintTop_toTopOf="@+id/text_producto" />

    <TextView
        android:id="@+id/edit_can_pro"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/btn_abajo"
        app:layout_constraintEnd_toEndOf="@+id/btn_abajo"
        app:layout_constraintStart_toStartOf="@+id/btn_abajo"
        app:layout_constraintTop_toBottomOf="@+id/btn_arriba" />


    <Button
        android:id="@+id/btn_abajo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="60dp"
        android:text="-"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:padding="8dp"
        android:text="OK"
        android:textSize="8dp"
        android:backgroundTint="@color/bk_tot1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>